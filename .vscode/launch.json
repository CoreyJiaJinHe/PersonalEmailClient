{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Email Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/main.py",
            "console": "integratedTerminal",
            "env": {
                "BACKEND_TOKEN": "dev-token"
            },
            "cwd": "${workspaceFolder}",
            "args": [],
            "justMyCode": true
        },
        {
            "name": "Debug Electron Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/.bin/electron.cmd",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/.bin/electron.cmd"
            },
            "cwd": "${workspaceFolder}/frontend",
            "env": {
                "BACKEND_TOKEN": "dev-token"
            },
            "runtimeArgs": ["."],
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        }
    ],
    "compounds": [
        {
            "name": "Backend + Electron",
            "configurations": ["Debug Email Backend", "Electron Frontend"],
            "stopAll": true
        }
    ]
}
